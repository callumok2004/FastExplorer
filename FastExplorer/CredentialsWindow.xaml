<Window
	x:Class="FastExplorer.CredentialsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Enter Network Credentials"
	Width="350"
	Height="200"
	Background="#202020"
	Foreground="White"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterOwner">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TextBlock
			Grid.ColumnSpan="2"
			Margin="0,0,0,15"
			FontSize="14"
			FontWeight="Bold"
			Foreground="White"
			Text="Connect to Network Share" />

		<TextBlock
			Grid.Row="1"
			Margin="0,0,10,10"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Username:" />
		<TextBox
			x:Name="UsernameBox"
			Grid.Row="1"
			Grid.Column="1"
			Margin="0,0,0,10"
			Padding="5" />

		<TextBlock
			Grid.Row="2"
			Margin="0,0,10,10"
			VerticalAlignment="Center"
			Foreground="White"
			Text="Password:" />
		<PasswordBox
			x:Name="PasswordBox"
			Grid.Row="2"
			Grid.Column="1"
			Margin="0,0,0,10"
			Padding="5" />

		<CheckBox
			x:Name="RememberMeCheck"
			Grid.Row="3"
			Grid.Column="1"
			Margin="0,0,0,10"
			Content="Remember my credentials"
			Foreground="White" />

		<StackPanel
			Grid.Row="4"
			Grid.ColumnSpan="2"
			Margin="0,10,0,0"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				Width="80"
				Height="25"
				Margin="0,0,10,0"
				Click="Connect_Click"
				Content="Connect"
				IsDefault="True" />
			<Button
				Width="80"
				Height="25"
				Click="Cancel_Click"
				Content="Cancel"
				IsCancel="True" />
		</StackPanel>
	</Grid>
</Window>
