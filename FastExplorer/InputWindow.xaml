<Window
	x:Class="FastExplorer.InputWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Add Network Location"
	Width="450"
	Height="180"
	Background="#202020"
	BorderBrush="#454545"
	BorderThickness="1"
	Foreground="White"
	ResizeMode="NoResize"
	WindowStartupLocation="CenterOwner"
	WindowStyle="None">
	<WindowChrome.WindowChrome>
		<WindowChrome CaptionHeight="0" ResizeBorderThickness="0" />
	</WindowChrome.WindowChrome>
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock
			Margin="0,0,0,20"
			FontSize="16"
			FontWeight="SemiBold"
			Text="Add Network Location" />

		<StackPanel Grid.Row="1">
			<TextBlock
				Margin="0,0,0,10"
				Foreground="#D0D0D0"
				Text="Enter network path (e.g. \\server\share):" />
			<TextBox
				x:Name="InputTextBox"
				Height="32"
				Margin="1"
				Padding="8,0"
				VerticalContentAlignment="Center"
				Background="#303030"
				BorderBrush="#454545"
				BorderThickness="1"
				CaretBrush="White"
				Foreground="White" />
		</StackPanel>

		<StackPanel
			Grid.Row="2"
			Margin="0,20,0,0"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				Width="80"
				Height="30"
				Margin="0,0,10,0"
				Background="#303030"
				BorderThickness="0"
				Click="Cancel_Click"
				Content="Cancel"
				Foreground="White"
				IsCancel="True">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border
							x:Name="border"
							Background="{TemplateBinding Background}"
							CornerRadius="4">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#404040" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Button.Template>
			</Button>
			<Button
				Width="80"
				Height="30"
				Background="#0078D4"
				BorderThickness="0"
				Click="Add_Click"
				Content="Add"
				Foreground="White"
				IsDefault="True">
				<Button.Template>
					<ControlTemplate TargetType="Button">
						<Border
							x:Name="border"
							Background="{TemplateBinding Background}"
							CornerRadius="4">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#1084E0" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Button.Template>
			</Button>
		</StackPanel>
	</Grid>
</Window>
